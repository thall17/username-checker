<style>
  .borderless td, .borderless th {
      border: none !important; 
  }
</style>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6" style="text-align:center">
      <%= form_tag(controller: "sites", action: "index", method: "post") do %>
        <div class="input-group">
          <%= text_field_tag :name, "", value: @name, autofocus: true, placeholder: 'Enter username...', class: 'form-control' %>
          <span class="input-group-btn">
            <button class="btn btn-info" type="submit">Check Availability</button>
          </span>
        </div>
      <% end %>
    </div>
    <!-- /.col-lg-12 -->
    <div class="col-sm-3">
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <!-- <h3>Results</h3> -->
      <table id="results" class="table table-responsive borderless">
        <thead>
          <tr>
            <th>Icon</th>
            <th>Site</th>
            <th>Response</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |key, value| %>
            <tr>
              <td>
                <span class="glyphicon glyphicon-github" aria-hidden="true"></span>
              </td>
              <td><%= key %></td>
              <% if value[:result] == "Available" %>
                <td style="color:green"><%= value[:result] %></td>
              <% else %>
                <td style="color:red"><%= value[:result] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>


    </div>
    <!-- /.col-lg-12 -->
    <div class="col-sm-3">
    </div>
  </div>
  <!-- /.row -->
</div>
